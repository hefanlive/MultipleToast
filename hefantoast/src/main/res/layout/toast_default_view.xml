<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_50dp_hf"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/default_15dp_hf"
        android:paddingRight="@dimen/default_15dp_hf">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_wangluoyichang" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_4dp_hf"
            android:singleLine="true"
            android:ellipsize="end"
            android:text=""
            android:textColor="@color/black64"
            android:textSize="@dimen/default_15sp_hf" />
    </LinearLayout>

</LinearLayout>