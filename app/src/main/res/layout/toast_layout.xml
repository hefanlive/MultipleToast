<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_toast_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_50dp_hf"
    android:background="@color/yellow">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/default_12dp_hf"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/iv_unified_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_unified_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_4dp_hf"
            android:text=""
            android:textColor="@color/black64"
            android:textSize="@dimen/default_16sp_hf" />
    </LinearLayout>
</RelativeLayout>